{
    "manifest_version": 2,

    "name": "1self browse-meter",
    "description": "A chrome extension to track how many times you visit popular websites.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "1self browse-meter",
        "default_popup": "insights.html"
    },
    "permissions": [
        "tabs"
    ],

    "background": {
        "scripts": ["1self.js", "common.js", "eventPage.js"],
        "persistent": true
    }
}
